package components

import (
	"fmt"
	"time"
	"github.com/aosanya/CodeValdCortex/internal/agent"
)

templ AgentCard(a *agent.Agent) {
	<div 
		class="box"
		x-data="{ expanded: false }"
		x-init="$el.setAttribute('data-agent-id', '{ a.ID }')"
		id={ fmt.Sprintf("agent-card-%s", a.ID) }
		style="min-height: 300px; display: flex; flex-direction: column;"
	>
		<!-- Header -->
		<div class="mb-4 is-flex is-justify-content-space-between is-align-items-start" style="flex-shrink: 0;">
			<div class="is-flex-grow-1" style="min-width: 0; margin-right: 0.75rem;">
				<h3 class="title is-5" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin-bottom: 0.25rem !important;">
					{ a.Name }
				</h3>
				<p class="subtitle is-6 has-text-grey" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin-top: 0 !important; margin-bottom: 0 !important;">
					{ a.Type }
				</p>
			</div>
			
			<div class="tags" style="flex-shrink: 0; white-space: nowrap;">
				<span class={ "tag " + statusClasses(a.GetState()) } id={ fmt.Sprintf("agent-state-badge-%s", a.ID) }>
					{ string(a.GetState()) }
				</span>
				<span class={ healthBadgeClass(a.IsHealthy()) } id={ fmt.Sprintf("agent-health-badge-%s", a.ID) }>
					{ healthBadgeText(a.IsHealthy()) }
				</span>
			</div>
		</div>
		
		<!-- Info -->
		<div class="content is-small mb-4" style="flex-shrink: 0;">
			<div class="level is-mobile mb-2">
				<div class="level-left" style="margin-right: 0.5rem;">
					<div class="level-item">
						<span class="has-text-grey">ID:</span>
					</div>
				</div>
				<div class="level-right">
					<div class="level-item">
						<span class="is-family-monospace is-size-7" style="overflow: hidden; text-overflow: ellipsis;">{ a.ID[:8] }...</span>
					</div>
				</div>
			</div>
			<div class="level is-mobile mb-2">
				<div class="level-left" style="margin-right: 0.5rem;">
					<div class="level-item">
						<span class="has-text-grey">Created:</span>
					</div>
				</div>
				<div class="level-right">
					<div class="level-item">
						<span style="white-space: nowrap;">{ formatTime(a.CreatedAt) }</span>
					</div>
				</div>
			</div>
			<div class="level is-mobile mb-2" style="min-height: 1.5rem;">
				if !a.LastHeartbeat.IsZero() {
					<div class="level-left" style="margin-right: 0.5rem;">
						<div class="level-item">
							<span class="has-text-grey">Last Heartbeat:</span>
						</div>
					</div>
					<div class="level-right">
						<div class="level-item">
							<span id={ fmt.Sprintf("agent-heartbeat-%s", a.ID) } style="white-space: nowrap;">{ formatTimeAgo(a.LastHeartbeat) }</span>
						</div>
					</div>
				}
			</div>
		</div>
		
		<!-- Actions - Fixed height to prevent jumping -->
		<div class="buttons mb-4" style="min-height: 2.5rem; flex-shrink: 0;" id={ fmt.Sprintf("agent-actions-%s", a.ID) }>
			if a.GetState() == agent.StateStopped || a.GetState() == agent.StateCreated {
				@ActionButton("Start", a.ID, "start", "success")
			}
			if a.GetState() == agent.StateRunning {
				@ActionButton("Stop", a.ID, "stop", "danger")
				@ActionButton("Restart", a.ID, "restart", "warning")
				@ActionButton("Pause", a.ID, "pause", "warning")
			}
			if a.GetState() == agent.StatePaused {
				@ActionButton("Resume", a.ID, "resume", "success")
			}
		</div>
		
		<!-- Details Toggle -->
		<div class="pt-4" style="border-top: 1px solid #dbdbdb;">
			<button 
				@click="expanded = !expanded"
				class="button is-fullwidth is-text"
			>
				<span x-text="expanded ? 'Hide Details' : 'Show Details'">Show Details</span>
				<span class="icon">
					<svg 
						style="width: 1rem; height: 1rem; transition: transform 0.2s;"
						:style="expanded ? 'transform: rotate(180deg);' : ''"
						fill="none" 
						stroke="currentColor" 
						viewBox="0 0 24 24"
					>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</span>
			</button>
			
			<div 
				x-show="expanded" 
				x-transition
				class="mt-4"
			>
				<div class="box has-background-light">
					<h4 class="subtitle is-6 mb-2">Metadata</h4>
					if len(a.Metadata) > 0 {
						<div class="content is-small">
							for key, value := range a.Metadata {
								<div class="is-flex mb-2" style="gap: 0.5rem;">
									<div style="flex-shrink: 0; min-width: fit-content;">
										<span class="has-text-grey has-text-weight-semibold">{ key }:</span>
									</div>
									<div style="min-width: 0; flex: 1;">
										<span style="word-break: break-word;">{ value }</span>
									</div>
								</div>
							}
						</div>
					} else {
						<p class="has-text-grey is-italic">No metadata</p>
					}
				</div>
				
				<a 
					href={ templ.SafeURL(fmt.Sprintf("/dashboard/agents/%s", a.ID)) }
					class="button is-fullwidth is-light"
				>
					View Full Details →
				</a>
			</div>
		</div>
	</div>
}

// AgentCardColumn wraps an agent card in a responsive column
templ AgentCardColumn(a *agent.Agent) {
	<div class="column is-one-third-desktop is-half-tablet" id={ fmt.Sprintf("agent-col-%s", a.ID) }>
		@AgentCard(a)
	</div>
}

// OOB Components - React-like granular updates for dynamic data only
// Each component targets a specific element by ID and swaps only that element

// AgentStatusOOB sends out-of-band update for status badge
templ AgentStatusOOB(a *agent.Agent) {
	<span 
		class={ "tag " + statusClasses(a.GetState()) }
		id={ fmt.Sprintf("agent-state-badge-%s", a.ID) }
		hx-swap-oob="true"
	>
		{ string(a.GetState()) }
	</span>
}

// AgentHealthOOB sends out-of-band update for health badge
templ AgentHealthOOB(a *agent.Agent) {
	<span 
		class={ healthBadgeClass(a.IsHealthy()) }
		id={ fmt.Sprintf("agent-health-badge-%s", a.ID) }
		hx-swap-oob="true"
	>
		{ healthBadgeText(a.IsHealthy()) }
	</span>
}

// AgentHeartbeatOOB sends out-of-band update for heartbeat timestamp only
templ AgentHeartbeatOOB(a *agent.Agent) {
	<span 
		id={ fmt.Sprintf("agent-heartbeat-%s", a.ID) }
		hx-swap-oob="innerHTML"
		style="white-space: nowrap;"
	>
		if !a.LastHeartbeat.IsZero() {
			{ formatTimeAgo(a.LastHeartbeat) }
		}
	</span>
}

// AgentActionsOOB sends out-of-band update for action buttons only
templ AgentActionsOOB(a *agent.Agent) {
	<div 
		class="buttons mb-4" 
		style="min-height: 2.5rem; flex-shrink: 0;" 
		id={ fmt.Sprintf("agent-actions-%s", a.ID) }
		hx-swap-oob="innerHTML"
	>
		if a.GetState() == agent.StateStopped || a.GetState() == agent.StateCreated {
			@ActionButton("Start", a.ID, "start", "success")
		}
		if a.GetState() == agent.StateRunning {
			@ActionButton("Stop", a.ID, "stop", "danger")
			@ActionButton("Restart", a.ID, "restart", "warning")
			@ActionButton("Pause", a.ID, "pause", "warning")
		}
		if a.GetState() == agent.StatePaused {
			@ActionButton("Resume", a.ID, "resume", "success")
		}
	</div>
}

templ StatusBadge(state agent.State) {
	<span class={ "tag " + statusClasses(state) }>
		{ string(state) }
	</span>
}

templ HealthIndicator(healthy bool) {
	if healthy {
		<span class="tag is-success is-light">
			<span class="icon is-small">
				<svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
				</svg>
			</span>
			<span>Healthy</span>
		</span>
	} else {
		<span class="tag is-danger is-light">
			<span class="icon is-small">
				<svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
				</svg>
			</span>
			<span>Unhealthy</span>
		</span>
	}
}

templ ActionButton(label, agentID, action, style string) {
	<button 
		hx-post={ fmt.Sprintf("/api/web/agents/%s/%s", agentID, action) }
		hx-target="closest [data-agent-id]"
		hx-swap="outerHTML"
		hx-indicator=".htmx-indicator"
		class={ "button is-small " + actionButtonClasses(style) }
	>
		{ label }
	</button>
}

func statusClasses(state agent.State) string {
	switch state {
	case agent.StateRunning:
		return "is-success"
	case agent.StateStopped:
		return "is-light"
	case agent.StatePaused:
		return "is-warning"
	case agent.StateFailed:
		return "is-danger"
	case agent.StateCreated:
		return "is-info"
	default:
		return "is-light"
	}
}

func actionButtonClasses(style string) string {
	switch style {
	case "success":
		return "is-success"
	case "danger":
		return "is-danger"
	case "warning":
		return "is-warning"
	default:
		return "is-primary"
	}
}

func formatTime(t time.Time) string {
	return t.Format("Jan 2, 15:04")
}

func formatTimeAgo(t time.Time) string {
	duration := time.Since(t)
	
	if duration < time.Minute {
		return "just now"
	} else if duration < time.Hour {
		mins := int(duration.Minutes())
		return fmt.Sprintf("%dm ago", mins)
	} else if duration < 24*time.Hour {
		hours := int(duration.Hours())
		return fmt.Sprintf("%dh ago", hours)
	} else {
		days := int(duration.Hours() / 24)
		return fmt.Sprintf("%dd ago", days)
	}
}

func healthBadgeClass(healthy bool) string {
	if healthy {
		return "tag is-success is-light"
	}
	return "tag is-danger is-light"
}

func healthBadgeText(healthy bool) string {
	if healthy {
		return "✓ Healthy"
	}
	return "✗ Unhealthy"
}
